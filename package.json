{
  "name": "fern",
  "description": "Fern API",
  "repository": "https://github.com/fern-api/fern",
  "author": "Birch Solutions, Inc.",
  "private": true,
  "workspaces": [
    "packages/**",
    "!packages/**/dist",
    "!packages/**/__test__"
  ],
  "scripts": {
    "clean": "yarn workspaces foreach --verbose --parallel run clean && /bin/rm -rf ./packages/api/generated",
    "compile": "yarn workspaces foreach --verbose --parallel --topological-dev run compile",
    "test": "yarn workspaces foreach --verbose --parallel run test",
    "lint:eslint": "eslint --max-warnings 0 .",
    "lint:eslint:fix": "yarn lint:eslint --fix",
    "lint:monorepo": "mrlint lint",
    "lint:monorepo:fix": "yarn lint:monorepo --fix",
    "format": "prettier --write --ignore-unknown --ignore-path ./shared/.prettierignore ",
    "format:all": "yarn format \"**\"",
    "format:check": "yarn format:all --check",
    "depcheck": "yarn workspaces foreach --verbose --parallel run depcheck",
    "codegen": "fern generate",
    "codegen:local": "yarn fern:local generate",
    "fern:local": "ts-node --project packages/cli/tsconfig.cjs.json packages/cli/src/cli.ts",
    "publish": "yarn workspaces foreach --no-private --parallel --verbose npm publish --access public",
    "docs:preview": "yarn docsify serve docs"
  },
  "devDependencies": {
    "@types/node": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "depcheck": "^1.4.3",
    "docsify-cli": "^4.4.4",
    "eslint": "^8.17.0",
    "eslint-plugin-jest": "^26.5.3",
    "fern-api": "0.0.74",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "mrlint": "^0.0.26",
    "prettier": "^2.6.2",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4"
  },
  "packageManager": "yarn@3.2.1"
}
